extends layout

block content
  .inner
    h2.headline.headline--medium.headline--left Signup
    if errors
      ul
        each err in errors
          li= err.msg
    .form
      form(action="/signup" method="POST")
        //- label(for="name") Name
        input.form--input(type="text" name="name" value=(body && body.name) placeholder="Name" required)
        //- label(for="email") Email
        input.form--input(type="email" name="email" value=(body && body.email) placeholder="Email address" required)
        //- label(for="password") Password
        input.form--input(type="password" name="password" placeholder="Password" required)
        //- label(for="password-confirm") Confirm password
        input.form--input(type="password" name="password-confirm" placeholder="Confirm password" required)
        input.form--btn(type="submit" value="Signup")