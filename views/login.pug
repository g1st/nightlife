extends layout

block content
  .inner
    h2.headline.headline--medium.headline--left Login
    if message
      p #{message}
    if errors
      ul
        each err in errors
          li= err.msg
    .form
      form(action="/login" method="POST")
        input.form--input(type="email" name="email" value=(body && body.email) placeholder="Email address" required)
        input.form--input(type="password" name="password" placeholder="Password" required)
        input.form--btn(type="submit" value="Login")